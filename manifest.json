{

    "manifest_version": 3,
    "name": "Vivaldi Forum mod",
    "short_name": "VF mod",
    "version": "3.2",
    "author": "luetage",
    "description": "Modular extension. Themes, fixes and modifications.",
    "homepage_url": "https://github.com/luetage/vivaldi_forum_mod",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "downloads",
        "alarms"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
    {
        "resources": [
        "themes/standard.css",
        "themes/custom.css",
        "mods/notification-icons.css",
        "mods/userID.css",
        "mods/signature-mod.css",
        "mods/square-avatars.css",
        "mods/advanced-formatting.css",
        "icons/icon16.png"
        ],
        "matches": [ "https://forum.vivaldi.net/*" ],
        "exclude_matches": [ "https://forum.vivaldi.net/assets/*", "https://forum.vivaldi.net/uploads/*", "https://forum.vivaldi.net/plugins/*" ]
    }
    ],
    "content_scripts": [
    {
      "matches": ["https://forum.vivaldi.net/*"],
      "exclude_matches": [
        "https://forum.vivaldi.net/assets/*",
        "https://forum.vivaldi.net/uploads/*",
        "https://forum.vivaldi.net/plugins/*"
      ],
      "js": ["theme.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://forum.vivaldi.net/*"],
      "exclude_matches": [
        "https://forum.vivaldi.net/assets/*",
        "https://forum.vivaldi.net/uploads/*",
        "https://forum.vivaldi.net/plugins/*"
      ],
      "js": [
        "mods/advanced-formatting.js",
        "mods/theme-preview.js",
        "default.js",
        "mods.js"
      ],
      "css": ["default.css"],
      "run_at": "document_end"
    }
    ],
    "background": {
        "service_worker":  "serviceworker.js"
    },
    "default_locale": "en"

}
